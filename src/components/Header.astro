---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
---

<style>
  header {
    height: 4.6875rem;
    width: 100%;
    background: var(--headerColor);
    display: flex;
    align-item: center;
  }
  .content {
    max-width: 64rem;
    margin: auto;
    padding: 0px 1.5rem 0px 1.5rem;
    width: 100%;
    display: flex;
    align-item: center;
    justify-content: space-between;
  }
  nav {
    display: flex;
    align-item: center;
  }
</style>

<header>
  <Hamburger />
  <div class="content">
    <div>Avator</div>
    <nav>
      <Navigation />
      <ThemeIcon />
    </nav>
  </div>
</header>
