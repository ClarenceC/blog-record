---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

const { frontmatter } = Astro.props;
const { id, data } = frontmatter;
const { title, pubDate, description, image } = data;
console.log("id:", id, frontmatter);
---

<a href={`/posts/${id}`}>
  <article
    class="shadow-md
  inset-shadow-2xs
  p-4
  mb-4
  rounded
  group-hover:stroke-white
  flex
  justify-between"
  >
    <div class="w-3/5">
      <h3 class="text-[28px] font-black">{title}</h3>
      <p class="text-[13px] color-[#374151]">
        {new Date(pubDate).toLocaleDateString()}
      </p>
      <p class="overflow-ellipsis overflow-hidden whitespace-nowrap">
        {description}
      </p>
    </div>
    <div>
      {
        image?.url && (
          <Image src={image?.url} alt={image?.alt} width={100} height={100} />
        )
      }
    </div>
  </article>
</a>
