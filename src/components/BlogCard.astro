---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

const { frontmatter } = Astro.props;
const { id, data } = frontmatter;
const { title, pubDate, description, image } = data;
console.log("id:", id, frontmatter);
---

<a href={`/posts/${id}`}>
  <article
    class="shadow-md inset-shadow-2xs p-4 mb-4 rounded group-hover:stroke-white relative h-40 hover:scale-[1.005] scale-100 active:scale-100"
  >
    <div
      class="w-full md:w-4/5 lg:w-4/5 xl:w-4/5 h-full flex flex-col justify-between"
    >
      <div>
        <h3
          class="md:text-[1.75rem] lg:text-[1.75rem] xl:text-[1.75rem] text-[20px] font-black line-clamp-2"
        >
          {title}
        </h3>
        <p
          class="md:text-[13px] lg:text-[13px] xl:text-[13px] text-[10px] color-[#374151]"
        >
          {new Date(pubDate).toLocaleDateString()}
        </p>
      </div>
      <p class="text-[13px] text-ellipsis overflow-hidden whitespace-nowrap">
        {description}
      </p>
    </div>
    <div class="absolute top-0 bottom-0 right-0 rounded bg-cover bg-center">
