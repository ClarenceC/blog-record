---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

const { frontmatter } = Astro.props;
const { id, data } = frontmatter;
const { title, pubDate, description, image } = data;
console.log("id:", id, frontmatter);
---

<a href={`/posts/${id}`}>
  <article
    class="shadow-md inset-shadow-2xs p-4 mb-4 rounded group-hover:stroke-white relative h-40"
  >
    <div class="w-3/5 h-full flex flex-col justify-between">
      <div class="">
        <h3 class="text-[28px] font-black">{title}</h3>
        <p class="text-[13px] color-[#374151]">
          {new Date(pubDate).toLocaleDateString()}
        </p>
      </div>
      <p class="overflow-ellipsis overflow-hidden whitespace-nowrap">
        {description}
      </p>
    </div>
    <div
      class="absolute top-0 bottom-0 right-0 rounded bg-[linear-gradient(to_right,_rgba(255,_0,_0,_0.5),_rgba(0,_0,_255,_0.5))] bg-cover bg-center"
    >
      <!-- {
        image?.url && (
          <Image
            class="rounded"
            src={image?.url}
            alt={image?.alt}
            loading="lazy"
            width={200}
            height={100}
          />
        )
      } -->
      {
        image?.url && (
          <img
            class="rounded bg-cover h-full"
            src={image?.url}
            alt={image?.alt}
          />
        )
      }
    </div>
  </article>
</a>
